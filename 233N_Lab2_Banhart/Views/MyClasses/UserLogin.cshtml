@{
    ViewBag.Title = "User Login";
}
<head>
    <style>
        .form-login{width: 600px}
        .form-label{width: 25%}
        .form-input{width: 75%}
    </style>
</head>
<body>
    <table class="form-login">
        <tr>
            <td><label class="form-label">Username</label></td>
            <td><input class="form-input" id="Username" type="text" /></td>
        </tr>
        <tr>
            <td><label class="form-label">Password</label></td>
            <td><input id="Password" class="form-input" type="password" /></td>
        </tr>
    </table>

    <input id="Submit" type="submit" value="submit">
</body>